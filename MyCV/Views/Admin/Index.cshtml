@using MyCV.Models.Entity
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>User Controller</h2>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>UserName</th>
        <th>Password</th>
        <th>Delete</th>
        <th>Edit</th>
       
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.UserName</td>
            <td>@item.Password</td>
            
            <td><a href="/Admin/DeleteAdmin/@item.Id" class="btn btn-warning">Delete</a></td>
            <td><a href="/Admin/UpdateAdmin/@item.Id" class="btn btn-danger">Edit</a> </td>
        </tr>
    }

</table>
<a href="/Admin/AddAdmin" class="btn btn-primary">Add New User</a>


