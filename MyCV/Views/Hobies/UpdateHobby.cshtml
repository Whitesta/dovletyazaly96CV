@model MyCV.Models.Entity.Hobies
@{
    ViewBag.Title = "UpdateHobby";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section class="content">
    <div class="container-fluid">

        <h2>Update Hobbies Page </h2>
        <form method="post">
            @Html.Label("Id")
            @Html.TextBoxFor(x => x.Id, new { @class = "form-control" }) <br />
            @Html.Label("Header")
            @Html.TextBoxFor(x => x.Header, new { @class = "form-control" })  <br />
            @Html.Label("Title ")
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })  <br />

            <button class="btn btn-info">Submit</button>
        </form>
        </div>
</section>