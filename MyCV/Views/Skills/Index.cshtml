@using MyCV.Models.Entity
@model List<Skills>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{ string color = ""; }

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
      
       

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h2 class="card-title">My Skills List</h2>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <a href="/Skills/AddSkill/" class="btn btn-primary"> Add New Slills</a> <br /> <br />
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th style="width: 10px">ID</th>
                                                <th>Task</th>
                                                <th>Progress</th>
                                                <th style="width: 40px">Label</th>
                                                <th>Edit</th>
                                                <th>Delete</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                if(item.Progress>=0 && item.Progress <= 50)
                                                {
                                                    color = "progress-bar bg-danger";
                                                }
                                                if (item.Progress >= 51 && item.Progress <= 70)
                                                {
                                                    color = "progress-bar bg-warning";
                                                }
                                                if (item.Progress >= 71 && item.Progress <= 85)
                                                {
                                                    color = "progress-bar bg-primary";
                                                }
                                                if (item.Progress >= 86 && item.Progress <= 100)
                                                {
                                                    color = "progress-bar bg-success";
                                                }
                                            <tr>
                                                <td>@item.Id</td>
                                                <td>@item.Skill</td>

                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="@color" style="width: @item.Progress%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="@color">@item.Progress%</span></td>
                                                <td> <a href="/Skills/UpdateSkill/@item.Id" class="btn btn-info btn-sm"> <i class="fas fa-pencil-alt"></i>Edit</a></td>
                                                <td><a href="/Skills/DeleteSkill/@item.Id" class="btn btn-danger btn-sm"> <i class="fas fa-trash"></i> Delete </a></td>
                                            </tr>
                                            }
                                           
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.card-body -->
                                <div class="card-footer clearfix">
                                    <ul class="pagination pagination-sm m-0 float-right">
                                        <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                                        <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                                    </ul>
                                </div>
                            </div>
                           
                        </div>
               
                    
                </div><!-- /.container-fluid -->
            </section>
            <!-- /.content -->
        
      
    </div>
   
</body>
</html>


